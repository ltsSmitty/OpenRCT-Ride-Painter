{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb",
    "prettier"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    // "spaced-comment": 0,
    // "max-len": ["error", { "code": 120 }],
    // "linebreak-style": 0,
    // "@typescript-eslint/triple-slash-reference": 0,
    // "no-console": 0,
    "prettier/prettier": ["error"],
    "import/extensions": ["error", "always", { "js": "never", "ts": "never" }],
    "no-undef": 1
  },
  "settings": {
    "import/resolver": {
      "node": { "extensions": [".js", ".ts"] }
    }
  }
}
